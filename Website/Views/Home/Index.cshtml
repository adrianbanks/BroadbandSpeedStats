@model BroadbandSpeedStats.Models.SpeedTestResultRequest

<h1 class="page-header">Latest results</h1>

@if (Model != null)
{
    <table class="table table-striped table-condensed">
        <tbody>
        <tr><td>
            Date:
        </td><td>
            @Model.Timestamp
        </td></tr>

        <tr><td>
            Ping:
        </td><td>
            @Model.Ping ms
        </td></tr>

        <tr><td>
            Download:
        </td><td>
            @(Model.Download / 1000000) Mbit/s
        </td></tr>

        <tr><td>
            Upload:
        </td><td>
            @(Model.Upload / 1000000) Mbit/s
        </td></tr>
        </tbody>
    </table>
}
